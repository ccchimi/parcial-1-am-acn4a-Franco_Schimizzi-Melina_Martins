<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_m">

            <!-- TOOLBAR -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary"
                android:elevation="@dimen/toolbar_elevation"
                android:padding="@dimen/padding_s">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="@dimen/text_title"
                    android:textColor="@android:color/white"/>

                <ImageView
                    android:id="@+id/ivAccount"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@drawable/cuenta"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/margin_s"/>
            </androidx.appcompat.widget.Toolbar>

            <!-- HERO SECTION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hero_height"
                android:orientation="vertical"
                android:background="@color/primary"
                android:padding="@dimen/padding_m"
                android:layout_marginTop="@dimen/margin_m"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bienvenido a Tastel"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_header"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recetas que se adaptan a vos"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_medium"
                    android:layout_marginTop="@dimen/margin_s"/>
            </LinearLayout>

            <!-- ACCESOS RAPIDOS -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accesos rápidos"
                android:textStyle="bold"
                android:textSize="@dimen/text_medium"
                android:layout_marginTop="@dimen/margin_l"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_m"
                android:gravity="center">

                <Button
                    android:id="@+id/btnGoRecipes"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="1"
                    android:text="Recetas"
                    android:backgroundTint="@color/primary"
                    android:textColor="@android:color/white"/>

                <Button
                    android:id="@+id/btnGoFav"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="1"
                    android:text="Favoritos"
                    android:backgroundTint="@color/primary"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="@dimen/margin_s"
                    android:layout_marginEnd="@dimen/margin_s"/>

                <Button
                    android:id="@+id/btnCommunity"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="1"
                    android:text="Comunidad"
                    android:backgroundTint="@color/primary"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <!-- DESTACADOS -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recetas destacadas"
                android:textStyle="bold"
                android:textSize="@dimen/text_medium"
                android:layout_marginTop="@dimen/margin_l"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/home_feature_image_height"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home"
                    android:layout_marginTop="@dimen/margin_m"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Explorá cientos de recetas premium"
                    android:textSize="@dimen/text_medium"
                    android:layout_marginTop="@dimen/margin_s"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@layout/drawer_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>